{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next",
			},
		],
		"paths": {
			"@/*": ["./*"],
			"auth": ["./auth"],
			"@bi": ["./node_modules/react-icons/bi"],
			"@components": ["./app/_components"],
		},
	},
	"exclude": ["node_modules", ".next"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"**/*.js",
		"node_modules/prisma/*",
	],
}
